---
import DevToPost from '../components/DevToPost.astro';
const response = await fetch('https://dev.to/api/articles?username=angelodotnet');
const posts = await response.json();
---

<html lang="it">
  <head>
    <title>Blog | Dev.to Posts</title>
  </head>
  <body>
    <h1>I miei posts su Dev.to</h1>
    <ul>
      {posts.map(post => (
        <DevToPost post={post} />
      ))}
    </ul>
  </body>
</html>